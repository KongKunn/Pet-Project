@model List<TETEX.Models.Lessons>
<h1>Courses</h1>
<div class="table-responsive">
    <form method="get" action="@Url.Action("ListCourse", "Course")">
        <div class="form-group">
            <label for="search">Search by Name:</label>
            <input type="text" class="form-control form-control-sm" id="search" name="search" placeholder="Search by Course Name">
        </div>
        <button type="submit" class="btn btn-primary" asp-controller="Course" asp-action="ListSearch">Search</button>
    </form>
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Requirements</th>
                <th>User Id</th>
                <th>Category Course Id</th>
                <th>Modified Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var course in Model)
            {
                <tr>
              
                     <td>@course.Name</td>
                    <td>@course.Description</td>
                    <td>@course.ModifiedDate</td>
                    <td><a asp-controller="Course" asp-action="Edit" asp-route-id="@course.Id">Edit</a></td>
                    <td><a asp-controller="Sections" asp-action="Create" asp-route-id="@course.Id">Add Sections</a></td>
                    <td><a asp-controller="Course" asp-action="ListSections" asp-route-id="@course.Id">List Sections</a></td>


                </tr>
            }
        </tbody>
    </table>
</div>
