@model List<TETEX.Models.Course>
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Your Page Title</title>
    <link rel="stylesheet" type="text/css" href="path/to/styles.css">
    <link rel="stylesheet" href="~/css/Style.css" />

</head>
<body>

    <h1>Courses</h1>
    <div class="table-responsive">
        <form method="get" action="@Url.Action("ListCourse", "Course")">
            <div class="form-group">
                <label for="search">Search by Name:</label>
                <input type="text" class="form-control form-control-sm" id="search" name="search" placeholder="Search by Course Name">
            </div>
            <button type="submit" class="btn btn-primary" asp-controller="Course" asp-action="ListSearch">Search</button>
        </form>
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Requirements</th>
                    <th>User Id</th>
                    <th>Category Course Id</th>
                    <th>Modified Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var course in Model)
                {
                    <tr>
                        <td>@course.Id</td>
                        <td>@course.Name</td>
                        <td>@course.Description</td>
                        <td>@course.Requirments</td>
                        <td>@course.UserId</td>
                        <td>@course.CategoryCourseld</td>
                        <td>@course.ModifiedDate</td>
                        <td><a class="c-button" style="margin-top: 20px;" asp-controller="Course" asp-action="Edit" asp-route-id="@course.Id">Edit</a></td>
                        <td><a class="c-button"  asp-controller="Sections" asp-action="Create" asp-route-id="@course.Id">Add Sections</a></td>
                        <td><a class="c-button" asp-controller="Sections" asp-action="List" asp-route-id="@course.Id">List Sections</a> </td>
                       
                    </tr>
                }
            </tbody>
        </table>
        <div class="row">
            <div class="col-md-6">
            </div>
            <div class="col-md-6">
                <nav>
                    <ul class="pagination justify-content-end">
                        <li class=" page-item">
                            <a class=" page-link text-black" href="">
                                <span>First</span>
                            </a>
                        </li>
                        <li class=" page-item">
                            <a class=" page-link text-black" href="">
                                <span> < </span>
                            </a>
                        </li>
                        <li class=" page-item">
                            <a class=" page-link text-black" href="">
                                1
                            </a>
                        </li>
                        <li class=" page-item">
                            <a asp-action="List" asp-controller="Course" asp-route-pageIndex="2">
                                2
                            </a>
                        </li>
                        <li class=" page-item">
                            <a class=" page-link text-black" href="">
                                3
                            </a>
                        </li>
                        <li class=" page-item">
                            <a class=" page-link text-black" href="">
                                >
                            </a>
                        </li>
                        <li class=" page-item">
                            <a class=" page-link text-black" href="">
                                Last
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>

</body>
</html>
