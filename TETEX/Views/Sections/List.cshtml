
@model List<TETEX.Models.Sections>
@{

    var routeId = Context.Request.RouteValues["id"] as string;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Your Page Title</title>
    <link rel="stylesheet" type="text/css" href="path/to/styles.css">
    <link rel="stylesheet" href="~/css/Style.css" />

</head>
<body>

<h1>Sections</h1>
<div class="table-responsive">
    <form method="get" action="@Url.Action("ListCourse", "Course")">
        <div class="form-group">
            <label for="search">Search by Name:</label>
            <input type="text" class="form-control form-control-sm" id="search" name="search" placeholder="Search by Section Name">
        </div>
        @*  <div class="form-group">
        <input class="form-control" id="routeId" name="routeId" value="@routeId" hidden />

        </div> *@
        <button type="submit" class="btn btn-primary" asp-controller="Sections" asp-route-id="@routeId" asp-action="Search">Search</button>
    </form>
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>ModifiedDate</th>
                <th>CreatedDate</th>
                <th>CourseId </th>
                <th>Course</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var sections in Model)
            {
                <tr>
                    <td>@sections.Id</td>
                    <td>@sections.Name</td>
                    <td>@sections.ModifiedDate</td>
                    <td>@sections.CreatedDate</td>
                    <td>@sections.CourseId </td>
                    <td>@sections.Course</td>
                    <td><a class="c-button" style="margin-top: 20px" asp-controller="Sections" asp-action="Edit" asp-route-id="@sections.Id">Edit</a></td>
                    <td><a class="c-button" asp-controller="Lesson" asp-action="Create" asp-route-id="@sections.Id">Create Lesson </a></td>
                    <td><a class="c-button" asp-controller="Lesson" asp-action="ListLesson" asp-route-id="@sections.Id">List Lesson</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
</body>
</html>
