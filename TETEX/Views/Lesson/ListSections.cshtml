@model List<TETEX.Models.Lessons>

<!DOCTYPE html>
<html>
<head>
    <title>List of Sections</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 20px;
        }
        .container {
            max-width: 800px;
            margin: auto;
            background: #fff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }
        h1 {
            text-align: center;
        }
        ul {
            list-style-type: none;
            padding: 0;
        }
        li {
            margin-bottom: 10px;
            padding: 10px;
            background: #f9f9f9;
            border-radius: 5px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>List of Sections</h1>
        <ul>
            @foreach (var lesson in Model)
            {
                <li>
                    <td>@lesson.Name</td>
                  
                 
                </li>
            }
        </ul>
    </div>
</body>
</html>
