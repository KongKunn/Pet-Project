@{
}
@model TETEX.Models.Lessons;

<h1> Edit Lesson</h1>
@if (Model is null )
{
    <h2> No Lesson found with this ID </h2>
}
@if(Model is not null){
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ModifiedDate" class="control-label"></label>
                    <input asp-for="ModifiedDate" class="form-control" />
                    <span asp-validation-for="ModifiedDate" class="text-danger"></span>
                </div>

            <div class="form-group">
                    <input asp-controller="Lesson" asp-action="Edit" type="submit" value="Edit" class="btn btn-primary" />
            </div>
                <div class="form-group">
                    <input asp-controller="Lesson" asp-action="Delete" type="submit" value="Delete" class="btn btn-primary" />
                </div>
        </form>
    </div>
</div>
}

